<% var title = "Form for edit" %>
<% include head.ejs %>
<% if(locals.product) { %>
<form method="POST" action="/insert?new=false&id_p=<%=product.id_product%>">
    <div class="form-group">
        <label for="inputName">Name</label>
        <input name="name" type="text" class="form-control" id="inputName" placeholder="Enter name" value="<%=product.name%>">
    </div>
    <div class="form-group">
        <label for="inputDescription">Description</label>
        <textarea name="description" class="form-control" id="inputDescription" placeholder="Description"><%=product.description %></textarea>
    </div>
    <div class="form-group">
        <label for="inputPrice">Price</label>
        <input name="price" type="text" class="form-control" id="inputPrice" placeholder="Enter name" value="<%=product.price%>">
    </div>
    <div class="form-group">
        <label for="inputCount">Count</label>
        <input name="count" type="number" id="inputCount" name="count" min="1" value="<%=product.count%>">
    </div>
    <div class="form-group">
        <label for="inputImg">Image</label>
        <input name="img" type="url" class="form-control" id="inputImg" placeholder="Enter image url" value="<%=product.img%>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%} else {%>
<form method="POST" action="/insert?new=true">
    <div class="form-group">
        <label for="inputName">Name</label>
        <input name="name" type="text" class="form-control" id="inputName" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="inputDescription">Description</label>
        <textarea name="description" class="form-control" id="inputDescription" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
        <label for="inputPrice">Price</label>
        <input name="price" type="text" class="form-control" id="inputPrice" placeholder="Enter price">
    </div>
    <div class="form-group">
        <label for="inputCount">Count</label>
        <input name="count" type="number" id="inputCount" name="count" min="1"  value="1">
    </div>
    <div class="form-group">
        <label for="inputImg">Image</label>
        <input name="img" type="url" class="form-control" id="inputImg" placeholder="Enter image url">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<% } %>
<% include footer.ejs %>